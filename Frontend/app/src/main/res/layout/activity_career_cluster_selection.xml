<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Career Clusters"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:background="@color/cobalt_blue">
        </TextView>

        <Button
            android:id="@+id/career_cluster_info_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:drawableTop="@drawable/baseline_question_mark_24"
            android:background="@drawable/circle_button"
            android:drawableTint="@color/white">
        </Button>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/career_cluster_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="30dp"
        android:background="@drawable/element_background"
        android:padding="15dp">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete Selection?"
        android:textColor="@color/cobalt_blue"
        android:textSize="20sp"
        android:layout_marginBottom="10dp">
    </TextView>

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:text="Confirm"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:backgroundTint="#0056b4"
        android:background="@drawable/rounded_button"
        android:textColor="#ffffff">
    </Button>

</androidx.appcompat.widget.LinearLayoutCompat>