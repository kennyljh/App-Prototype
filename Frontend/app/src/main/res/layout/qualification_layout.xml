<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/element_background"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/qualification_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Qualification title placeholder"
            android:textColor="@color/white"
            android:background="@drawable/element_background"
            android:backgroundTint="@color/cobalt_blue"
            android:textSize="20sp"
            android:padding="5dp">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "
                android:textSize="18sp"
                android:textColor="@color/cobalt_blue">
            </TextView>

            <TextView
                android:id="@+id/qualification_description_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="17sp">
            </TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: "
                android:textColor="@color/cobalt_blue"
                android:textSize="18sp">
            </TextView>

            <View
                android:layout_width="23dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/qualification_duration_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="17sp">
            </TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"/>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>