<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/element_background"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_energy_savings_leaf_24"
            android:layout_gravity="center"
            android:backgroundTint="@color/cobalt_blue">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agriculture, Food &amp; Natural Resources"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/cobalt_blue">
        </TextView>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>